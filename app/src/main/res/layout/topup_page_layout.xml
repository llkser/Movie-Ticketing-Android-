<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@drawable/user_page_button_shape">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="10dp"
        android:text=" Amount："
        android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            >
            <CheckBox
                android:id="@+id/topupAmount100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥100"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/topupAmount200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="¥200"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/topupAmount500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="¥500"
                android:textSize="18sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/topupConfirmButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:text="Confirm" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_page_button_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="VIP Standard"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:text=" VIP1: Accumulated top-up in range (¥100, ¥200)."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="5dp"
            android:text="           All tickets enjoy 10% discount !"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:text=" VIP2: Accumulated top-up in range (¥200, ¥500)."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="5dp"
            android:text="           All tickets enjoy 20% discount !"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:text=" VIP3: Accumulated top-up over ¥500."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="5dp"
            android:text="           All tickets enjoy 30% discount !"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</LinearLayout>